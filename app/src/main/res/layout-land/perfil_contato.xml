<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PerfilContato">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dth_perfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="#fff" />

    <EditText
        android:layout_width="match_parent"
        android:text="..."
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="5dp"
        android:textColor="@color/baree"
        style="@style/Widget.Design.TextInputLayout"
        android:background="#fff"
        android:cursorVisible="false"
        android:gravity="bottom"
        android:drawableLeft="@drawable/identity_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/baree"
        android:id="@+id/dth_nome"
        android:textStyle="bold"
        android:focusable="false"
        android:enabled="false"
        android:clickable="false"
        android:layout_below="@id/dth_perfil"
        android:layout_height="wrap_content"/>


    <EditText
        android:layout_width="match_parent"
        android:text="..."
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:gravity="bottom"
        android:focusable="false"
        android:clickable="true"
        style="@style/Widget.Design.TextInputLayout"
        android:cursorVisible="false"
        android:background="#fff"
        android:textStyle="bold"
        android:textColor="@color/baree"
        android:drawableLeft="@drawable/contactge_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/baree"
        android:id="@+id/dth_aniversario"
        android:layout_below="@id/dth_nome"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Excluir esse contato"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:id="@+id/iqdetek2"
        android:onClick="detekei"
        android:gravity="bottom"
        style="@style/Widget.Design.TextInputLayout"
        android:background="#fff"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:textColor="@color/baree"
        android:drawableLeft="@drawable/ic_delete_sweep"
        android:drawablePadding="5dp"
        android:drawableTint="@color/baree"
        android:layout_below="@id/dth_aniversario"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>